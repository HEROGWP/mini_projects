
<% if @video.errors.any? %>
    <div class="alert alert-warning" role="alert">
      <% @video.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </div>
<% end %>


<%= form_for @video do |v|%>
	<div class="form-group">
		<%= v.label :name, "Name:" %>
		<%= v.text_field :name, :class => "form-control" %>
	</div>

	<div class="form-group">
		<%= v.label :url_address, "URL:" %>
		<%= v.url_field :url_address, :class => "form-control" %>
	</div>

	<div class="form-group">
		<%= v.label :description, "Description:" %>
		<%= v.text_area :description, :class => "form-control" %>
	</div>

<!-- 	<%= hidden_field_tag :page, params[:page] %> -->
	<%= v.submit @submit_name, :class => "btn btn-primary" %>
<% end %>


<hr style="height:2px;border:none;color:#333;background-color:#333;" />
<table class="table table-hover">
	<tr>
		<th>Name</th>
		<th>URL</th>
		<th>Short_url</th>
		<th>Times</th>
		<th>Description</th>
		<th></th>
	</tr>
	<% @videos.each do |v| %>
		
		<tr>
			<td><%= v.name %></td>
			<td><%= v.url_address %></td>
			<td><%= "https://mini-projects.herokuapp.com/"+v.random.to_s %></td>
			<td><%= v.times %></td>
			<td><%= v.description %></td>
			<td>
				<%= link_to "", videos_path( :id =>  v, :page => params[:page]), :class => "btn btn-primary glyphicon glyphicon-pencil" %>
				<%= link_to "", video_path(v, :page => params[:page]), :method => :delete, :class => "btn btn-danger glyphicon glyphicon-remove" %>
			</td>
		</tr>
	
	<% end %>
</table>
<div class="col-md-4 col-sm-4 col-xs-4"></div>
<div class="col-md-4 col-sm-4 col-xs-4"><%= paginate @videos %></div>
<div class="col-md-4 col-sm-4 col-xs-4"></div>
